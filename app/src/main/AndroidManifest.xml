<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TFGHabitos"
        tools:targetApi="31">

        <!-- Actividad de inicio de sesiÃ³n -->
        <activity
            android:name=".Principal.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Otras actividades sin intent-filter -->
        <activity android:name=".Principal.MainActivity" />
        <activity android:name=".Principal.SettingsActivity" />
        <activity android:name=".Principal.SettingsActivity$HelpActivity" />
        <activity android:name=".Principal.AddHabitActivity" />
        <activity android:name=".Principal.RegisterActivity" />
        <activity android:name=".Principal.StatisticsActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>
