<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <!-- LinearLayout superior -->
    <RelativeLayout
        android:id="@+id/rl_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:rotation="180"
            android:background="@drawable/background_curved_top"
            android:gravity="center"
            android:layout_marginBottom="40px"
            android:orientation="horizontal">

            <!-- Título de la página -->
            <TextView
                android:id="@+id/textView_title"
                android:layout_width="wrap_content"
                android:layout_height="120px"
                android:layout_centerHorizontal="true"
                android:layout_marginVertical="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/alata"
                android:rotation="180"
                android:text="AYUDA"
                android:textAlignment="center"
                android:textSize="27sp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_habit_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_gray_border"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="125dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/text_habit_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="25dp"
            android:fontFamily="@font/alata"
            android:text="Esta aplicación te ayuda a desarrollar buenos hábitos y a mantener un seguimiento de tus progresos. Puedes agregar hábitos, establecer recordatorios y ver tus estadísticas para mantenerte enfocado en tus objetivos.\n
            \nLa clave para desarrollar hábitos saludables es la consistencia. Al dedicar tiempo y esfuerzo a tus objetivos diariamente, podrás ver resultados significativos a lo largo del tiempo.\n
            \nAdemás, la aplicación te permite establecer objetivos personalizados y realizar un seguimiento de tu progreso para cada uno. Esto te ayuda a mantenerte motivado y enfocado en tus metas a largo plazo.\n
            \nLa aplicación te ofrece la flexibilidad de personalizar tus hábitos según tus necesidades individuales. Puedes establecer la frecuencia y el momento óptimos para cada hábito, permitiéndote adaptar tu rutina diaria de acuerdo con tu estilo de vida. Además, la aplicación te proporciona insights y análisis detallados sobre tus hábitos, lo que te ayuda a identificar áreas de mejora y a tomar decisiones más informadas para alcanzar tus objetivos de bienestar personal." />
    </RelativeLayout>

    <!-- Menú inferior -->
    <LinearLayout
        android:id="@+id/bottomButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@drawable/background_curved_top"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnToday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="60dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:contentDescription="@string/today_button_description"
            android:maxWidth="37dp"
            android:maxHeight="37dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_today"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageButton
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:contentDescription="@string/add_button_description"
            android:maxWidth="37dp"
            android:maxHeight="37dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_add"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageButton
            android:id="@+id/btnStatistics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="20dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:contentDescription="@string/statistics_button_description"
            android:maxWidth="37dp"
            android:maxHeight="37dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_statistics"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
