<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <!-- Usamos el selector para el color del círculo alrededor del día -->
        <item name="colorControlActivated">@color/green</item>
        <!-- Mantenemos el color del texto del día en negro -->
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <!-- Establecemos el color del texto de la semana en negro -->
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CalenderViewCustomPrueba" parent="android:TextAppearance.DeviceDefault.Small">
        <!-- Establecemos el color del texto de la semana en negro -->
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
